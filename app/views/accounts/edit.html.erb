<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-8">Edit Account</h1>

  <%= form_with model: @account, class: "space-y-6" do |f| %>
    <% if @account.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h3 class="font-bold">Errors:</h3>
        <ul class="list-disc list-inside">
          <% @account.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium mb-2" %>
      <%= f.text_field :name, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update Account", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", @account, class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
