<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Product Catalog</h1>
    <%= link_to "Add Product", new_product_path, class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition font-medium" %>
  </div>

  <% if @products.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Product Name
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Description
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Earliest Expiry
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @products.each do |product| %>
            <%
              # Get earliest expiry from all subscriptions
              earliest_sub = product.subscriptions.order(:expires_at).first
            %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= product.name %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-600">
                  <%= product.description&.truncate(100) || "No description" %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if earliest_sub %>
                  <% if earliest_sub.expired? %>
                    <span class="text-red-600 font-medium">
                      Expired <%= earliest_sub.expires_at.strftime("%b %d, %Y") %>
                    </span>
                  <% elsif earliest_sub.expiring_soon? %>
                    <span class="text-yellow-600 font-medium">
                      ⚠️ <%= earliest_sub.expires_at.strftime("%b %d, %Y") %> (<%= earliest_sub.days_until_expiry %> days)
                    </span>
                  <% else %>
                    <span class="text-gray-500">
                      <%= earliest_sub.expires_at.strftime("%b %d, %Y") %>
                    </span>
                  <% end %>
                <% else %>
                  <span class="text-gray-400 italic">No subscriptions</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "Edit", edit_product_path(product), class: "text-blue-600 hover:text-blue-800 font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No products yet</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first product in the catalog.</p>
      <%= link_to "Create Product", new_product_path, class: "inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition font-medium" %>
    </div>
  <% end %>
</div>
